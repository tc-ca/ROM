          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "Language",
                "type": "integer",
                "value": 918640001
              }
            ]
          }
        },
        "Initialize_variable_DateDiff_Annual_Compliance_Completed_Date": {
          "runAfter": {
            "Initialize_variable_Language": [
              "Succeeded"
            ]
          },
          "metadata": {
            "operationMetadataId": "c9d5e37a-87a8-4b8d-8878-9ff17f5235b4"
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "DateDiff",
                "type": "integer",
                "value": "@div(sub(ticks(convertFromUtc(triggerOutputs()?['body/cid_annualcompliancecompletiondate'], 'Eastern Standard Time','D')),ticks(formatDateTime(utcNow(), 'yyyy-MM-dd'))),864000000000)"
              }
            ]
          }
        }
      }
    },
