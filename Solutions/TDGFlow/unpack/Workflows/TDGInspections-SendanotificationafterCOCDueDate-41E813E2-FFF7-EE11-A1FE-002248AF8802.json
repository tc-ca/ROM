              "connectionName": "shared_commondataserviceforapps",
              "operationId": "ListRecords",
              "apiId": "/providers/Microsoft.PowerApps/apis/shared_commondataserviceforapps"
            },
            "parameters": {
              "entityName": "ovs_confirmationofcompliances",
              "fetchXml": "<fetch version=\"1.0\" output-format=\"xml-platform\" mapping=\"logical\" distinct=\"false\">\n<entity name=\"ovs_confirmationofcompliance\">\n<attribute name=\"activityid\"/>\n<attribute name=\"subject\"/>\n<attribute name=\"createdon\"/>\n<attribute name=\"scheduledend\"/>\n<order attribute=\"subject\" descending=\"false\"/>\n<filter type=\"and\">\n<condition attribute=\"statecode\" operator=\"in\">\n<value>3</value>\n<value>0</value>\n</condition>\n<condition attribute=\"scheduledend\" operator=\"on\" value=\"@{variables('InDays372')}\"/>\n</filter>\n<link-entity name=\"msdyn_workorder\" from=\"msdyn_workorderid\" to=\"regardingobjectid\" link-type=\"inner\" alias=\"user\">\n<attribute name=\"ovs_secondaryinspector\"/>\n<attribute name=\"ovs_primaryinspector\"/>\n</link-entity>\n</entity>\n</fetch>"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
