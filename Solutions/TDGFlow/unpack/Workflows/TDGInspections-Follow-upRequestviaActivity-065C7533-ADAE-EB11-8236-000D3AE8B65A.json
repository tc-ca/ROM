            ]
          },
          "metadata": {
            "operationMetadataId": "91dfff41-d840-4206-9ee9-e5448a4e5e81"
          },
          "type": "InitializeVariable",
          "inputs": {
            "variables": [
              {
                "name": "Approval Result",
                "type": "string",
                "value": "Rejected"
              }
            ]
          }
