          "metadata": {
            "operationMetadataId": "cd6c001b-0ca7-4960-b9a3-eedc4797f60f"
          },
          "type": "Compose",
          "inputs": "<a href = \"@{variables('D365 Operation URL')}\">@{triggerOutputs()?['body/ovs_name']}</a><br>"
        },
        "Set_Operation_Link": {
          "runAfter": {
            "Compose_Operation_Link": [
