              "api-version": "2018-10-01"
            },
            "authentication": "@parameters('$authentication')"
          }
        },
        "Compose_Operation_Link": {
          "runAfter": {
            "Initialize_variable:_D365_Operation_URL_": [
              "Succeeded"
            ]
